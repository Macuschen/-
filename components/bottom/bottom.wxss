/* components/bottom/bottom.wxss */
.wrap{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100rpx;
  width: 100%;
  height: 78rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-top: 1rpx solid #eee;
  font-size:20rpx;
  display: flex;
  flex-direction: row;
  color: #999;
  background-color: #FFFFFF;
}
.wrap .item{
  flex: 1;
  text-align: center; 
  font-size: 25rpx;
}
.wrap .item .pic{
  display: inline-block;
}
.wrap .item .pic .image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.wrap .item .selected{
  color: #FF3333;
}